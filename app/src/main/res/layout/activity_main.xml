<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ermilov.focushomeworktwo.Speedometr
        android:id="@+id/speedometrview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.ermilov.focushomeworktwo.Speedometr>

    <Button
        android:id="@+id/button_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Decrease"
        app:layout_constraintEnd_toEndOf="@+id/speedometrview"
        app:layout_constraintTop_toBottomOf="@+id/speedometrview">

    </Button>

    <Button
        android:id="@+id/button_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Increase"
        app:layout_constraintStart_toStartOf="@+id/speedometrview"
        app:layout_constraintTop_toBottomOf="@+id/speedometrview" />

</androidx.constraintlayout.widget.ConstraintLayout>